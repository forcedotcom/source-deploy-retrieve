{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Publish Source Deploy Retrieve Library",
      "command": "./scripts/publish-workflow.sh",
      "type": "shell",
      "args": ["${input:circleCiId}", "${input:publishType}"]
    },
    {
      "label": "Launch Pre-Publish Steps",
      "command": "./scripts/port-changes.js",
      "type": "shell",
      "args": ["${input:verboseOutput}", "-r", "${input:releaseBranch}"]
    },
    {
      "label": "Commit",
      "command": "yarn",
      "type": "shell",
      "presentation": {
        "focus": true,
        "panel": "shared"
      },
      "args": ["run", "commit"],
      "isBackground": false
    },
    {
      "label": "Commitizen Initialization",
      "command": "yarn",
      "type": "shell",
      "presentation": {
        "focus": false,
        "panel": "shared"
      },
      "args": ["run", "commit-init"],
      "isBackground": false
    }
  ],
  "inputs": [
    {
      "id": "circleCiId",
      "type": "promptString",
      "description": "CircleCi Token"
    },
    {
      "id": "publishType",
      "type": "pickString",
      "description": "Type of version to publish",
      "options": ["minor", "patch", "major"],
      "default": "patch"
    },
    {
      "id": "releaseBranch",
      "type": "promptString",
      "description": "Provide the release version (Ex 1.1.0)"
    },
    {
      "id": "verboseOutput",
      "type": "pickString",
      "description": "Output verbose logging? Select -v for verbose, and blank for quiet.",
      "options": ["", "-v"],
      "default": "-v"
    }
  ]
}
